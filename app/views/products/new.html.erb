<div class="container">
  <%= form_for @product, url: {action: :create} do |f| %>
      <div>
        <h3>Add a Product</h3>
      </div>
      <div>
        <p>
        <div>
            <label>Product Name</label>
              <%= f.text_field :name %>
        </div>

        <div>
             <label>UPC</label>
             <%= f.text_field :upc %>
        </div>

        <div>
           <label>Available On</label>
              <%= f.text_field :available_on %>
        </div>

        <div>
        <label>Property Name</label>
           <%= f.text_field :property_name %>
     </div>

     <div>
     <label>Property Value</label>
        <%= f.text_field :property_value %>
  </div>
		 </p>
      </div>
      <div>
        <%= link_to 'Back', { controller: 'products', action: 'index'} %>
        <%= f.submit 'Create Product' %>
      </div>
  <% end %>
</div>